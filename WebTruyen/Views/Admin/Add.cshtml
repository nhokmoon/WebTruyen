@model TruyenAddViewModel
@{ 
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-controller="Admin" asp-action="Add" enctype="multipart/form-data">
        <h3 class="text-danger">Thêm truyện</h3>
        <div class="row">
            <div class="col-sm-3">
                <label class="col-form-label">Nhập tên truyện:</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="TenTruyen" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <label class="col-form-label">Thể loại:</label>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label class="col-form-label">Chú thích:</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="ChuThich" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label class="col-form-label">Trạng thái:</label>
                </div>
                <div class="col-6">
                    <select class="form-select" asp-for="TrangThai">
                        <option value="" aria-disabled="true">--Please choose category--</option>
                        <option value="HoanThanh">Hoàn Thành</option>
                        <option value="ChuaHoanThanh">Chưa Hoàn Thành</option>
                    </select>
                </div>
            </div>
            <div class="col-6">
                <select class="form-select" asp-for="TheLoai">
                    <option value="" aria-disabled="true">--Please choose category--</option>
                    <option value="XuyenNhanh">Xuyên Nhanh</option>
                    <option value="NgonTinh">Ngôn tình</option>
                    <option value="NguyenSang">Nguyên sang</option>
                    <option value="NamSinh">Nam sinh</option>
                </select>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label class="col-form-label">Số chương:</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="SoChuong" />
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-form-label">ImageUrl:</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="Photo" type="file" />
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>