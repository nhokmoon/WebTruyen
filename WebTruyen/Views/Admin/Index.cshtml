@*@model IEnumerable<Truyen>*@
@model TruyenListViewModel
@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Danh sách truyện</h1>
<table class="table table-stdiped">
    <thead>
        <td>Tên Truyện</td>
        <td>Chú thích</td>
        <td>Trạng thái</td>
        <td>Thể loại</td>
        <td>Số chương</td>
        <td>Hình ảnh</td>
        <td>Hành động</td>
    </thead>
    <tbody>
        @foreach(Truyen p in Model.Truyens)
            {
                var PhotoPath = "/images/" + p.ImageUrl;
        <tr>
            <td>@p.TenTruyen</td>
            <td>@p.ChuThich</td>
            <td>@p.TrangThai</td>
            <td>@p.TheLoai</td>
            <td>@p.SoChuong</td>
            <td>
                <img src="@PhotoPath" class="w-auto"/>
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Admin" asp-route-truyenId="@p.TruyenId" class="btn-warning btn">Chỉnh sửa truyện</a>
                <a asp-action="Delete" asp-controller="Admin" asp-route-truyenId="@p.TruyenId" class="btn-danger btn">Xóa truyện</a>
            </td>
        </tr>
            }
    </tbody>
</table>
<a class="btn-primary btn text-center" asp-action="Add" asp-controller="Admin">Thêm truyện</a>