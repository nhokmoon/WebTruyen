@*@model IEnumerable<Truyen>*@
@model TruyenListViewModel
@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Danh sách truyện</h1>
<table class="table table-stdiped">
    <thead>
    <td>TenTruyen</td>
    <td>ChuThich</td>
    <td>TrangThai</td>
    <td>TheLoai</td>
    <td>SoChuong</td>
    <td>ImageUrl</td>
    <td>Action</td>
    </thead>
    <tbody>
        @foreach(Truyen p in Model.Truyens)
            {
        <tr>
            <td>@p.TenTruyen</td>
            <td>@p.ChuThich</td>
            <td>@p.TrangThai</td>
            <td>@p.TheLoai</td>
            <td>@p.SoChuong.ToString("c")</td>
            <td>@p.ImageUrl</td>
            <td>
                <a asp-action="Edit" asp-controller="Admin" asp-route-productId="@p.TruyenId" class="btn-warning btn">Edit</a>
                <a asp-action="Delete" asp-controller="Admin" asp-route-productId="@p.TruyenId" class="btn-danger btn">Delete</a>
            </td>
        </tr>
            }
    </tbody>
</table>
<a class="btn-primary btn text-center" asp-action="Add" asp-controller="Admin">Add product</a>